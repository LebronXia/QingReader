<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/ll_three_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/backgroundcolor_item"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_three_photo_one"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:background="@mipmap/img_one_bi_one"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/tv_three_photo_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="?attr/textcolor"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="7dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_three_photo_two"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:background="@mipmap/img_one_bi_one"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/tv_three_photo_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="?attr/textcolor"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="7dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_three_photo_three"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:background="@mipmap/img_one_bi_one"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/tv_three_photo_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="?attr/textcolor"
            android:textSize="12sp" />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>