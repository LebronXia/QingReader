<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="18dp"
        android:orientation="vertical"
        android:background="?attr/backgroundcolor_item"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!--第一部分-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="35dp"
                    android:gravity="center"
                    >

                    <ImageButton
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:background="@drawable/home_middle_fm"
                        />

                    <TextView
                        android:id="@+id/tv_headview_child_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="?attr/textcolor"
                        android:gravity="center"
                        android:text="干货闲读"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </RelativeLayout>

            <!--第二部分-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    >

                    <ImageButton
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:background="@mipmap/home_icon_day"
                        />

                    <TextView
                        android:id="@+id/tv_headview_child_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:textColor="?attr/textcolor"
                        android:text="每日干货推荐"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </RelativeLayout>

            <!--第三部分-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:layout_alignParentRight="true"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    >

                    <ImageButton
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:background="@mipmap/home_icon_rank"
                        />

                    <TextView
                        android:id="@+id/tv_headview_child_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:textColor="?attr/textcolor"
                        android:text="新电影热映榜"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_below="@+id/personal_recommend"
            android:layout_marginTop="13dp"
             />

    </LinearLayout>
</RelativeLayout>